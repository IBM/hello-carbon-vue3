{
  "name": "hello-carbon-vue3",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build --base=/hello-carbon-vue3/",
    "local-build": "vite build && python -m http.server -d dist",
    "preview": "vite preview",
    "test:e2e": "cypress run --e2e",
    "test:unit": "cypress run --component",
    "lint": "eslint --fix .",
    "ci:lint": "eslint && prettier --check src/",
    "prepare": "husky",
    "format": "prettier --write src/"
  },
  "dependencies": {
    "@carbon/icons-vue": "^10.99.1",
    "@carbon/themes": "^10.55.5",
    "@carbon/vue": "^3.0.24",
    "carbon-components": "^10.58.15",
    "i18next": "^24.2.2",
    "i18next-http-backend": "^3.0.1",
    "i18next-vue": "^5.0.0",
    "lodash": "^4.17.21",
    "pinia": "^2.3.1",
    "sass": "^1.83.4",
    "superagent": "^10.1.1",
    "v-lazy-image": "^2.1.1",
    "vue": "^3.5.13",
    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@eslint/js": "^9.19.0",
    "@commitlint/config-conventional": "^19.6.0",
    "@rushstack/eslint-patch": "^1.10.5",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vue/eslint-config-prettier": "^10.2.0",
    "cypress": "^14.0.1",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.19.0",
    "eslint-plugin-cypress": "^4.0.0",
    "eslint-plugin-vue": "^9.32.0",
    "husky": "^9.1.7",
    "jsdom": "^26.0.0",
    "lint-staged": "^15.4.3",
    "postcss": "^8.5.1",
    "prettier": "^3.4.2",
    "tailwindcss": "^4.0.0",
    "vite": "^6.0.11"
  },
  "lint-staged": {
    "!(dist/**/*)*.{js,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "!(dist/**/*)*.{md,html}": "prettier --write"
  }
}
