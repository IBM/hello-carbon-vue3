{
  "name": "hello-carbon-vue3",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build --base=/hello-carbon-vue3/",
    "local-build": "vite build && python -m http.server -d dist",
    "preview": "vite preview",
    "test:unit": "vitest --environment jsdom --root src/",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs --fix --ignore-path .gitignore",
    "prepare": "husky install"
  },
  "dependencies": {
    "@carbon/icons-vue": "^10.96.1",
    "@carbon/themes": "^10.55.5",
    "@carbon/vue": "^3.0.20",
    "carbon-components": "^10.58.15",
    "i18next": "^23.14.0",
    "i18next-http-backend": "^2.6.1",
    "i18next-vue": "^4.0.0",
    "lodash": "^4.17.21",
    "pinia": "^2.2.2",
    "sass": "^1.77.8",
    "superagent": "^10.0.2",
    "v-lazy-image": "^2.1.1",
    "vue": "^3.4.38",
    "vue-router": "^4.4.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.3",
    "@rushstack/eslint-patch": "^1.10.4",
    "@vitejs/plugin-vue": "^5.1.4",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/test-utils": "^2.4.6",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.0",
    "eslint-plugin-vue": "^9.28.0",
    "husky": "^9.1.5",
    "jsdom": "^24.1.1",
    "lint-staged": "^15.2.9",
    "postcss": "^8.4.41",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.13",
    "vite": "^5.4.2",
    "vitest": "^2.1.1"
  },
  "lint-staged": {
    "!(dist/**/*)*.{js,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "!(dist/**/*)*.{md,html}": "prettier --write"
  }
}
