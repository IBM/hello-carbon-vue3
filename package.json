{
  "name": "hello-carbon-vue3",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build --base=/hello-carbon-vue3/",
    "local-build": "vite build && python -m http.server -d dist",
    "preview": "vite preview",
    "test:unit": "vitest --environment jsdom --root src/",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs --fix --ignore-path .gitignore",
    "prepare": "husky install"
  },
  "dependencies": {
    "@carbon/icons-vue": "^10.72.1",
    "@carbon/themes": "^10.55.3",
    "@carbon/vue": "^3.0.10",
    "carbon-components": "^10.58.10",
    "i18next": "^23.6.0",
    "i18next-http-backend": "^2.3.0",
    "i18next-vue": "^2.2.1",
    "lodash": "^4.17.21",
    "pinia": "^2.1.7",
    "sass": "^1.69.5",
    "superagent": "^8.1.2",
    "v-lazy-image": "^2.1.1",
    "vue": "^3.3.7",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.8.1",
    "@commitlint/config-conventional": "^17.8.1",
    "@rushstack/eslint-patch": "^1.5.1",
    "@vitejs/plugin-vue": "^3.2.0",
    "@vue/eslint-config-prettier": "^7.1.0",
    "@vue/test-utils": "^2.4.1",
    "eslint": "^8.52.0",
    "eslint-plugin-vue": "^9.18.1",
    "husky": "^8.0.3",
    "imagemin-lint-staged": "^0.5.1",
    "jsdom": "^20.0.3",
    "lint-staged": "^13.3.0",
    "prettier": "^2.8.8",
    "vite": "^3.2.8",
    "vitest": "^0.25.8"
  },
  "lint-staged": {
    "!(dist/**/*)*.{js,vue}": [
      "eslint",
      "prettier --write"
    ],
    "!(dist/**/*)*.{md,html}": "prettier --write",
    "!(dist/**/*)*.{png,jpg}": "imagemin-lint-staged"
  }
}
