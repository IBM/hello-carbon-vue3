{
  "name": "hello-carbon-vue3",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build --base=/hello-carbon-vue3/",
    "preview": "vite preview",
    "dev:e2e": "cypress open --e2e",
    "test:e2e": "cypress run --e2e",
    "test:unit": "cypress run --component",
    "lint": "eslint --fix .",
    "dev:lint": "eslint .",
    "ci:lint": "eslint && prettier --check src/",
    "prepare": "husky",
    "format": "prettier --write src/"
  },
  "dependencies": {
    "@carbon/icons-vue": "^10.99.1",
    "@carbon/themes": "^10.55.6",
    "@carbon/vue": "^3.0.25",
    "@vueuse/core": "^13.2.0",
    "carbon-components": "^10.59.1",
    "i18next": "^25.1.3",
    "i18next-http-backend": "^3.0.2",
    "i18next-vue": "^5.3.0",
    "lodash": "^4.17.21",
    "pinia": "^3.0.2",
    "sass": "^1.89.0",
    "superagent": "^10.2.1",
    "v-lazy-image": "^2.1.1",
    "vue": "^3.5.14",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@eslint/js": "^9.25.0",
    "@vitejs/plugin-vue": "^5.2.3",
    "@vue/eslint-config-prettier": "^10.2.0",
    "autoprefixer": "^10.4.21",
    "cypress": "^14.3.1",
    "eslint": "^9.25.0",
    "eslint-plugin-cypress": "^4.2.1",
    "eslint-plugin-vue": "^9.33.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^15.5.1",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "tailwindcss": "^3.4.17",
    "vite": "^6.3.2"
  },
  "lint-staged": {
    "!(dist/**/*)*.{js,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "!(dist/**/*)*.{md,html}": "prettier --write"
  }
}
