{
  "name": "hello-carbon-vue3",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build --base=/hello-carbon-vue3/",
    "preview": "vite preview",
    "test:unit": "vitest --environment jsdom --root src/",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs --fix --ignore-path .gitignore",
    "prepare": "husky install"
  },
  "dependencies": {
    "@carbon/icons-vue": "^10.71.1",
    "@carbon/themes": "^10.55.2",
    "@carbon/vue": "3.0.7-alpha.0",
    "carbon-components": "^10.58.8",
    "i18next": "^23.2.11",
    "i18next-http-backend": "^2.2.1",
    "i18next-vue": "^2.2.1",
    "lodash": "^4.17.21",
    "pinia": "^2.1.4",
    "sass": "^1.64.1",
    "superagent": "^8.0.9",
    "v-lazy-image": "^2.1.1",
    "vue": "^3.3.4",
    "vue-router": "^4.2.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.7",
    "@commitlint/config-conventional": "^17.6.7",
    "@rushstack/eslint-patch": "^1.3.2",
    "@vitejs/plugin-vue": "^3.2.0",
    "@vue/eslint-config-prettier": "^7.1.0",
    "@vue/test-utils": "^2.4.1",
    "eslint": "^8.45.0",
    "eslint-plugin-vue": "^9.15.1",
    "husky": "^8.0.3",
    "imagemin-lint-staged": "^0.5.1",
    "jsdom": "^20.0.3",
    "lint-staged": "^13.2.3",
    "prettier": "^2.8.8",
    "vite": "^3.2.7",
    "vitest": "^0.25.8"
  },
  "lint-staged": {
    "!(dist/**/*)*.{js,vue}": [
      "eslint",
      "prettier --write"
    ],
    "!(dist/**/*)*.{md,html}": "prettier --write",
    "!(dist/**/*)*.{png,jpg}": "imagemin-lint-staged"
  }
}
